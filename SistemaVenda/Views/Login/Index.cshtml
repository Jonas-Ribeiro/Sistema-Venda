@{
    Layout = null;
}
@model SistemaVenda.Models.LoginViewModel;


<link href="~/css/Login.css" rel="stylesheet" />

<h2>Index</h2>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <div style="float:left; width: 100%; height: 5px"></div>
            <img src="~/img/logo.png" id="icon" alt="User Icon" height="20px" />
            <div style="float:left; width: 100%; height: 5px"></div>
        </div>

        <!-- Login Form -->
        <form asp-controller="Login" asp-action="Index" method="post">
            <input asp-for="Email" type="text" class="fadeIn second" placeholder="Email">
            <span asp-validation-for="Email" style="color: red"></span>
            <input asp-for="Senha" type="password" class="fadeIn third" placeholder="Senha">
            <span asp-validation-for="Senha" style="color: red"></span>
            <br />
            <input type="submit" class="fadeIn fourth" value="Entrar">
            <br />
            <span style="color: red">@ViewData["ErroLogin"]</span>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Esqueceu a senha?</a>
        </div>

    </div>
</div>